{
  "id": "com.Digi-Desk2.RustDesk",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "Digi-Desk2",
  "icon": "share/icons/hicolor/scalable/apps/Digi-Desk2.svg",
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-12.10.json",
    "xdotool.json",
    {
      "name": "Digi-Desk2",
      "buildsystem": "simple",
      "build-commands": [
        "bsdtar -zxvf Digi-Desk2-1.2.4.deb",
        "tar -xvf ./data.tar.xz",
        "cp -r ./usr/*  /app/",
        "mkdir -p /app/bin && ln -s /app/lib/Digi-Desk2/Digi-Desk2 /app/bin/Digi-Desk2",
        "mv /app/share/applications/Digi-Desk2.desktop /app/share/applications/com.Digi-Desk2.RustDesk.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.Digi-Desk2.RustDesk' /app/share/applications/com.Digi-Desk2.RustDesk.desktop",
        "sed -i '/^Icon=/ c\\Icon=com.Digi-Desk2.RustDesk' /app/share/applications/Digi-Desk2-link.desktop",
        "mv /app/share/icons/hicolor/scalable/apps/Digi-Desk2.svg /app/share/icons/hicolor/scalable/apps/com.Digi-Desk2.RustDesk.svg",
        "for size in 16 24 32 48 64 128 256 512; do\n rsvg-convert -w $size -h $size -f png -o $size.png logo.svg\n install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/com.Digi-Desk2.RustDesk.png\n done"
      ],
      "cleanup": ["/include", "/lib/pkgconfig", "/share/gtk-doc"],
      "sources": [
        {
          "type": "file",
          "path": "../Digi-Desk2-1.2.4.deb"
        },
        {
          "type": "file",
          "path": "../res/logo.svg"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=home",
    "--device=dri",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Flatpak"
  ]
}
