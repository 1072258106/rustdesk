#!/bin/bash

set -e

case $1 in
    remove|upgrade)
		INITSYS=$(ls -al /proc/1/exe | awk -F' ' '{print $NF}' | awk -F'/' '{print $NF}')
        rm /usr/bin/Digi-Desk2
		
		if [ "systemd" == "${INITSYS}" ]; then

			systemctl stop Digi-Desk2 || true
			systemctl disable Digi-Desk2 || true
			rm /etc/systemd/system/Digi-Desk2.service /usr/lib/systemd/system/Digi-Desk2.service || true
			
			# workaround temp dev build between 1.1.9 and 1.2.0
			ubuntuVersion=$(grep -oP 'VERSION_ID="\K[\d]+' /etc/os-release | bc -l)
			waylandSupportVersion=21
			if [ "$ubuntuVersion" != "" ] && [ "$ubuntuVersion" -ge "$waylandSupportVersion" ]
			then
				serverUser=$(ps -ef | grep -E 'Digi-Desk2 +--server' | grep -v 'sudo ' | awk '{print $1}' | head -1)
				if [ "$serverUser" != "" ] && [ "$serverUser" != "root" ]
				then
					systemctl --machine=${serverUser}@.host --user stop Digi-Desk2 >/dev/null 2>&1 || true
				fi
			fi
			rm /usr/lib/systemd/user/Digi-Desk2.service >/dev/null 2>&1 || true
		fi
        ;;
esac

exit 0
