pkgname=Digi-Desk2
pkgver=1.2.4
pkgrel=0
epoch=
pkgdesc=""
arch=('x86_64')
url=""
license=('AGPL-3.0')
groups=()
depends=('gtk3' 'xdotool' 'libxcb' 'libxfixes' 'alsa-lib' 'libva' 'libvdpau' 'libappindicator-gtk3' 'pam' 'gst-plugins-base' 'gst-plugin-pipewire')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=pacman_install
changelog=
noextract=()
md5sums=() #generate with 'makepkg -g'

package() {
  if [[ ${FLUTTER} ]]; then
	  mkdir -p "${pkgdir}/usr/lib/Digi-Desk2" && cp -r ${HBB}/flutter/build/linux/x64/release/bundle/* -t "${pkgdir}/usr/lib/Digi-Desk2"
  fi
  mkdir -p "${pkgdir}/usr/bin"
  pushd ${pkgdir} && ln -s /usr/lib/Digi-Desk2/Digi-Desk2 usr/bin/Digi-Desk2 && popd
  install -Dm 644 $HBB/res/Digi-Desk2.service -t "${pkgdir}/usr/share/Digi-Desk2/files"
  install -Dm 644 $HBB/res/Digi-Desk2.desktop -t "${pkgdir}/usr/share/Digi-Desk2/files"
  install -Dm 644 $HBB/res/Digi-Desk2-link.desktop -t "${pkgdir}/usr/share/Digi-Desk2/files"
  install -Dm 644 $HBB/res/128x128@2x.png "${pkgdir}/usr/share/icons/hicolor/256x256/apps/Digi-Desk2.png"
  install -Dm 644 $HBB/res/scalable.svg "${pkgdir}/usr/share/icons/hicolor/scalable/apps/Digi-Desk2.svg"
}
